<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/user_comment_image"
            android:layout_width="50dp"
            android:padding="5dp"
            app:aiv_BoarderWidth="2dp"
            app:aiv_ShowBoarder="false"
            app:aiv_TextSizeRatio="0.4"
            android:layout_height="50dp"
            android:src="@drawable/vector_drawable_icon_avatar"/>

        <TextView
            android:id="@+id/txt_comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:maxLines="1"
            tools:text="Author"
            android:textColor="@color/colorDark"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/user_comment_image"
            android:layout_toEndOf="@+id/user_comment_image"
            android:layout_alignParentTop="true" />

        <TextView
            android:textColor="@color/colorDark"
            android:id="@+id/txt_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="12sp"
            tools:text="Conteudo do post"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/user_comment_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textColor="@color/colorDark"
            android:id="@+id/txt_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            tools:text="2016-10-20 06:20:59"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/txt_comment_author"
            android:layout_toRightOf="@+id/user_comment_image"
            android:layout_toEndOf="@+id/user_comment_image" />

    </RelativeLayout>
</android.support.v7.widget.CardView>